{
  "build": {
    "beforeDevCommand": "pnpm dev:vite",
    "beforeBuildCommand": "pnpm build:vite",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Tune Perfect",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "all": false
      },
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true,
        "readDir": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "setFullscreen": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "de.zernico.sing",
      "targets": "all",
      "macOS": {
        "entitlements": "entitlements.mac.plist"
      }
    },
    "security": {
      "csp": "default-src 'self' stream:; connect-src * stream:; img-src * data: stream:;"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Tune Perfect",
        "width": 800,
        "height": 600
      }
    ]
  }
}
